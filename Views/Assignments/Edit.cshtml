@model assignment_tracker.Models.Assignment

@{
    ViewData["Title"] = "Edit Assignment";
}

<h1>Edit Assignment</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Deadline" class="control-label"></label>
        <input asp-for="Deadline" class="form-control" />
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course" class="control-label"></label>
        <input asp-for="Course" class="form-control" />
        <span asp-validation-for="Course" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="InstructorEmail" class="control-label"></label>
        <input asp-for="InstructorEmail" class="form-control" />
        <span asp-validation-for="InstructorEmail" class="text-danger"></span>
    </div>
    <!-- Exclude Status from Edit form -->
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
